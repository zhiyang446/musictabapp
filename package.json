{
  "name": "musictabapp-monorepo",
  "version": "0.1.0",
  "description": "Music transcription app monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "echo 'Development scripts will be added in later tasks'",
    "build": "echo 'Build scripts will be added in later tasks'",
    "test": "echo 'No tests yet - placeholder for future Jest tests'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "npm run format && npm run lint && npm run test",
    "make": "powershell -ExecutionPolicy Bypass -File ci.ps1",
    "check-env": "node scripts/check-env.js",
    "setup-env": "copy .env.example .env",
    "test-supabase": "node scripts/test-supabase.js",
    "test-supabase-http": "powershell -ExecutionPolicy Bypass -File scripts/test-supabase-curl.ps1",
    "supabase": "npx supabase",
    "check-supabase": "node scripts/check-supabase-cli.js",
    "test-users-table": "node scripts/test-users-table.js",
    "test-sql": "node scripts/test-sql-query.js",
    "test-audio-files": "node scripts/test-audio-files-table.js",
    "test-audio-files-dod": "node scripts/test-audio-files-dod.js",
    "test-transcription-jobs": "node scripts/test-transcription-jobs-table.js",
    "test-transcription-jobs-dod": "node scripts/test-transcription-jobs-dod.js",
    "api:start": "node api/server.js",
    "api:dev": "nodemon api/server.js",
    "test-api": "node scripts/test-api-endpoints.js",
    "test-api-curl": "node scripts/test-api-curl.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@9.8.1",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  }
}
