{
  "name": "musictabapp-monorepo",
  "version": "0.1.0",
  "description": "Music transcription app monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run api:start\" \"npm run frontend:start\"",
    "test-frontend": "node scripts/test-frontend.js",
    "test-transcription": "node scripts/test-transcription-jobs.js",
    "test-status-updates": "node scripts/test-status-updates.js",
    "test-frontend-dod": "node scripts/test-frontend-dod.js",
    "build": "echo 'Build scripts will be added in later tasks'",
    "test": "echo 'No tests yet - placeholder for future Jest tests'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "ci": "npm run fmt:check && npm run lint:js && npm run lint:py && npm run test:js && npm run test:py",
    "make": "powershell -ExecutionPolicy Bypass -File ci.ps1",
    "check-env": "node scripts/check-env.js",
    "setup-env": "copy .env.example .env",
    "test-supabase": "node scripts/test-supabase.js",
    "test-supabase-http": "powershell -ExecutionPolicy Bypass -File scripts/test-supabase-curl.ps1",
    "supabase": "npx supabase",
    "check-supabase": "node scripts/check-supabase-cli.js",
    "test-users-table": "node scripts/test-users-table.js",
    "test-sql": "node scripts/test-sql-query.js",
    "test-audio-files": "node scripts/test-audio-files-table.js",
    "test-audio-files-dod": "node scripts/test-audio-files-dod.js",
    "test-transcription-jobs": "node scripts/test-transcription-jobs-table.js",
    "test-transcription-jobs-dod": "node scripts/test-transcription-jobs-dod.js",
    "api:start": "node api/server.js",
    "api:dev": "nodemon api/server.js",
    "test-api": "node scripts/test-api-endpoints.js",
    "test-api-curl": "node scripts/test-api-curl.js",
    "create-test-audio": "node scripts/create-test-audio.js",
    "test-upload": "node scripts/test-file-upload.js",
    "frontend:start": "node frontend/server.js",
    "test-upload-dod": "node scripts/test-upload-dod.js",
    "fmt": "prettier --write . && poetry run black . && poetry run isort .",
    "fmt:check": "prettier --check . && poetry run black --check . && poetry run isort --check-only .",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:py": "poetry run ruff check . || echo 'No Python files to check'",
    "test:js": "echo 'No JS tests configured yet'",
    "test:py": "poetry run pytest || echo 'No Python tests found'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "packageManager": "npm@9.8.1",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2"
  }
}
